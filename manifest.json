{
  "manifest_version": 3,
  "name": "Aster â€“ AI Content Helper",
  "version": "1.0.0",
  "description": "Summarize text, draft replies, and polish LinkedIn posts with AI.",
  "permissions": ["storage", "contextMenus", "activeTab", "scripting"],
  "host_permissions": ["https://api.openai.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "AI Content Helper",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
